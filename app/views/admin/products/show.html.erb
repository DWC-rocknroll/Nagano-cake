<div class="container">
  <div class="row">
    <h4 class="customer-new">商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-4">
        <div class="id img-field"><%= attachment_image_tag(@product, :image, :fill, 400, 450, format: 'jpeg', size:"100×100",fallback: "no_image.jpg") %></div>
      </div>
      <div class="col-xs-6">
        <dv class="field"><p>商品名<%= @product.name %></p></br></dv>
        <dv class="field"><p>商品説明<%= @product.introduction %></p></br></dv>
        <dv class="field"><p>ジャンル<%= @product.genre.name %></p></dv>
        <dv class="field"><p>税込価格（税抜価格）<%= @product.add_tax_tax_out_price.to_s(:dalimited) %>(<%= @product.tax_out_price %>)円</p></br></dv>
        <div class="field">
          <p>
            販売ステータス
            <% if @product.is_sale_active == true %>
          　  <i class="fas fa-bullseye red"></i>販売中
            <% elsif @product.is_sale_active == false %>
          　  <i class="fas fa-bullseye blue"></i>販売停止中
            <% end %>
          </p>
        </div>
      <div class="acstions col-xs-9">
        <%= link_to "編集する", edit_admin_product_path(@product), data: {"turbolinks" => false}, class: "glyphicon glyphicon-pencil btn btn-success pull-right" %>
      </div>
      </div>
    </div>
  </div>
</div>