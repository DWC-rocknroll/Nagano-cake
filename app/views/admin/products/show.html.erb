<div class="container">
  <div class="row">
    <h4 class="customer-new">商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-4">
        <div class="id img-field">
          <%= attachment_image_tag(@product, :image, size:"300×220",fallback: "no_image.jpg") %>
        </div>
      </div>
      <div class="col-xs-6">

      </div>
    </div>

  </div>
</div>




<%= @product.name %>
<%= @product.introduction %>
<%= @product.genre.name %>

<% if @product.is_sale_active == true %>
　<i class="fas fa-bullseye red"></i>販売中
<% elsif @product.is_sale_active == false %>
　<i class="fas fa-bullseye blue"></i>販売停止中
<% end %>
<%= link_to "編集する", edit_admin_product_path(@product), data: {"turbolinks" => false}, class: "glyphicon glyphicon-pencil btn btn-success pull-right" %>
