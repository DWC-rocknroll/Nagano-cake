<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <h4 class="mypage-title">商品一覧</h2>
    </div>
    <div class="col-md-6 plus-icon">
      <%= link_to "＋", new_admin_product_path, class:"btn btn-success rounded-circle" %>
    </div>
    <div class="col-md-2"></div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div id="create">
        <table class="table table-hover table-inverse products-index">
          <thead>
            <tr class="info">
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜き価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td>
                  <%= product.id %>
                </td>
                <td class="text_left">
                  <%= link_to admin_product_path(product.id) do %>
                    <%= product.name %>
                  <% end %>
                </td>
                <td class="text_left">
                  <%= product.tax_out_price %>
                </td>
                <td>
                  <%= product.genre.name %>
                </td>
                <td class="font-weight-bold h5">
                  <% if product.is_sale_active == true %>
                    <div class="text-success">
                      販売中
                    </div>
                  <% elsif product.is_sale_active == false %>
                    <div class="text-danger">
                      販売停止中
                    </div>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div
    <div class="col-md-2"></div>
  </div>
</div>
