<div class="container">
  <div class="row">
    <dic class="col-md-1"></dic>
    <div class="col-md-3">
      <h4 class="mypage-title">注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1 text">
        <table class="table">
          <thead>
            <tr class="active">
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %></td>
              <td>名前</td>
              <td><%= order.order_details.sum(:order_quantity) %></td>
              <td><%= order.status_i18n %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <%= paginate @order %>
    </div>
  </div>
</div>
