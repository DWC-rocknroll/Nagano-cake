<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="admin-new">管理者ログイン</h4>  
    </div>
    <div class="col-md-9"></div>
  </div>
  
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10 mx-auto">
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <table class="table table-noborder">
        <tbody>
          <tr>
            <td class="admin-session-label"><%= f.label "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class:"admin-session-form" %></td>  
          </tr>
          
          <tr>
            <td class="admin-session-label"><%= f.label "パスワード" %></td>
            <td><%= f.password_field :password, class:"admin-session-form" %></td>
          </tr>
          
          <tr>
            <td></td>
          </tr>
          
          <tr>
            <td></td>
            <td class="admin-button">
              <div class="actions">
                <%= f.submit "ログイン", class:"btn btn-primary admin-login" %>
              </div>
            </td>
          </tr>
          
        </tbody>
      </table>
      <% end %>  
    </div>
  </div>
    
</div>
