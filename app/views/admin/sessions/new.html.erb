<div class="container row mx-auto">
  <div class="mx-auto text-center py-4 px-3 col-md-6 rounded">
    <h4 class="mb-4 px-3 py-2 rounded">管理者ログイン</h4>
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <div class="field mb-3">
        <i class="far fa-envelope mr-2"></i><%= f.label 'メールアドレス' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field mb-3">
        <i class="fas fa-key mr-2"></i><%= f.label 'パスワード' %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="actions">
        <%= f.submit "ログイン" ,class: 'btn btn-info pull-right btn-lg'%>
      </div>
    <% end %>
  </div>
</div>
