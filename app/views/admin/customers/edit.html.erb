<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class"customer-name"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
    </div>
      <div class="col-md-9"></div>
  </div>
  <div class="row">
    <div class="col-md-10">
    <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
    <table class="table table-noborder">
      <tbody>
        <tr>
          <td>顧客ID</td>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <td>名前</td>
          <td>
            <div　class="field">
              <%= f.text_field :last_name, placeholder: "令和" %>
            </div>
          </td>
          <td>
            <div　class="field">
              <%= f.text_field :first_name, placeholder: "道子" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td>
            <div class= "field">
              <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
            </div>
          </td>
          <td>
            <div class="field">
              <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td>
            <div class="field">
              <%= f.text_field :email, autofocus: true, placeholder: "sample@example.com" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td>
            <div>
              <%= f.text_field :postcode, autofocus: true, placeholder: "0000000" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>住所</td>
          <td colspan="2">
            <div class="field">
              <%= f.text_field :residence, :size=>"60", autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>電話番号(ハイフンなし)</td>
          <td>
            <div class="field">
              <%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, :"有効" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, :"退会" %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td>
            <div class="actions">
              <%= f.submit "編集を保存する", class:"btn btn-success" %>
            </div>
          </td>
        </tr>

      </tbody>
    </table>
    <% end %>
  </div>
</div>

