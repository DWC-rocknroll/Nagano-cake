<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-1">
      <h4 class="mypage-title"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報詳細</h4>
    </div>
      <div class="col-md-9"></div>
  </div>
  <div class="row">
    <div class="col-md-8">
    <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
    <table class="table table-noborder">
      <tbody>
        <tr>
          <td>顧客ID</td>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <td>名前</td>
          <td>
            <%= @customer.last_name %>
            <%= @customer.first_name %>
          </td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td>
            <%= @customer.last_name_kana %>
            <%= @customer.first_name_kana %>
          </td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td>
            <%= @customer.email %>
          </td>
        </tr>

        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td>
            <div>
              <%= @customer.postcode %>
            </div>
          </td>
        </tr>

        <tr>
          <td>住所</td>
          <td colspan="2">
            <%= @customer.residence %>
          </td>
        </tr>

        <tr>
          <td>電話番号(ハイフンなし)</td>
          <td>
            <div class="field">
              <%= @customer.phone_number %>
            </div>
          </td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_active == true %>
              <span class="text-success font-weight-bold">会員</span>
            <% else %>
              <span class="text-danger font-weight-bold">退会</span>
            <% end %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td>
            <div class="actions">
              <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
              <%= link_to "注文履歴一覧をみる", admin_root_path, class:"btn btn-primary ml-3" %>
            </div>
          </td>
        </tr>

      </tbody>
    </table>
    <% end %>
  </div>
</div>

