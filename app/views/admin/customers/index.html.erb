<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <h4 class="mypage-title">会員一覧</h4>
    </div>
    <div class="col-md-8"></div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <table class="table customer-index-table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_active == true %>
              <td>
                <span class="text-success font-weight-bold h5">会員</span>
              </td>
            <% else %>
              <td>
                <span class="text-danger font-weight-bold h5">退会</span>
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>