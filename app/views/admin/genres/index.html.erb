<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>ジャンル一覧・追加</h2>
            
      <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
        <div class="field row">
          <div class="form-group">
            <%= f.label :name, "ジャンル名" %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.submit "新規登録", class: 'bnt btn-success' %>
          </div>
        </div>
      <% end %>
            
      <div class="genre-table">
        <table class="table table-hover">
          <thead>
            <tr class="active">
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'bnt btn-success' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>