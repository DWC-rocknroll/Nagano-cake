<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-3">
      <h4 class="mypage-title">会員情報編集</h4>
    </div>
    <div class="col-md-7"></div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-11">
      <%= form_with model: @customer,url: public_customer_path(current_customer), local: true do |f| %>
        <table class="table mypage-edit-table">
          <tbody>
            <tr>
              <td class="mypage-table-head">氏名</td>
              <td class="mypage-table-first"><%= f.text_field :last_name, autofocus: true %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postcode %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="3"><%= f.text_field :residence, class:"mypage-edit-residence" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :phone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存", class:"btn btn-success mypage-edit-submit" %></td>
              <td><%= link_to "退会する", public_customer_confirm_path(current_customer), class:"btn btn-danger mypage-edit-leave" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>