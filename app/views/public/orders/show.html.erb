<div class="container">
  <div class="row">
      <h4 class="customer-new">注文履歴詳細</h4>
  </div>
  <div class="table table-bordered">
    注文情報
    <div>
      <div>
        注文日:
        <%= @order.updated_at.strftime('%Y/%m/%d') %>
      </div>
      <div>
        配送先:
        〒<%= @order.deliveries_postcode %></br>
        <%= @order.address %></br>
        <%= @order.name %>
      </div>
      <div>
        支払方法:
        <%= @order.payment_method_i18n %>
      </div>
      <div>
        ステータス:
        <%= @order.status_i18n %>
      </div>
    </div>
  </div>
  <table class="table table-striped">
    <thead class="head_data">
      <tr>
        <th></th>
        <th>商品</th>
        <th>税込価格</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
  </table>
</div>

