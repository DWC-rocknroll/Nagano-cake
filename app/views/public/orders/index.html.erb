<h2>注文情報確認</h2>

<div class="row">
    <div class="col-md-10">
      <div id="create">
        <table class="table table-hover table-bordered">
          <thead>
            <tr class="info">
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= order.created_at.strftime('%Y/%m/%d') %>
                </td>
                <td>
                  <%= order.customer.postcode %> <br>
                  <%= order.customer.residence %> <br>
                  <%= order.name %> <br>
                </td>
                <td>
                  <%= order_details.product.name %>
                </td>
                <td>
                  支払金額<%= order.total_price.to_s(:delimited) %>円
                </td>
                <td>
                  ステータス<%= order.order_status %>
                </td>
                <td>
                <%= link_to public_order_path(order) do %>
                  表示する
                <% end %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <div class="col-md-2"></div>
</div>

