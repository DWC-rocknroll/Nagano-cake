<div class="container px-5 px-sm-0">
  <div class="row">

    <!--「ジャンル検索」を部分テンプレート？-->
    <div class="col-md-3">
      <table class="table table table-noborder">
        <thead>
         <tr>
           <th><div class="text-center mypage-title">ジャンル検索</div></th>
         </tr>
        </thead>
        <tbody>
          <tr>
            <th>
              ケーキ<br>
              焼き菓子<br>
              プリン<br>
              キャンディ<br>
            </th>
          </tr>
          <tr></tr>
          <tr></tr>
          <tr></tr>
          <tr></tr>
          <tr></tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-8 offset-md-1">
      <div style="float: left; margin: 15px 30px 15px 0px;">
        <%= attachment_image_tag(@product, :image, :fill, 300, 300, format: 'jpeg', size:"100×100",fallback: "no_image.jpg") %>
      </div>
      <div style="width:400px; height:300px; float:left;">
        <h3 style="color: black;"><%= @product.name %></h3><br>
        <p><%= @product.introduction %></p>
        <h4>¥<%= @product.add_tax_tax_out_price.to_s(:delimited) %><span style="font-size:12px;">（税込）</span></h4>
      </div>
      <div class="col-xs-5 products-in-cart-form">
        <% if customer_signed_in? %>
         <%= form_with model:@cart_item, url:public_cart_items_path,local: true do |f|  %>
           <%= f.hidden_field :product_id, :value => @product.id %>
           <%= f.select :quantity, *[1..10] %>
           <%= f.submit "カートに入れる", class:"btn btn-success rounded" %>
         <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>