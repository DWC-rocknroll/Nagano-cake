<div class="container px-5 px-sm-0">
  <div class="row">
    <!--「ジャンル検索」を部分テンプレート？-->
    <div class="col-md-3">
      <table class="table table table-bordered">
        <thead>
         <tr>
           <th><div class="text-center font-weight-bold">ジャンル検索</div></th>
         </tr>
        </thead>
        <tbody>
          <tr>
            <th>
              ケーキ<br>
              焼き菓子<br>
              プリン<br>
              キャンディ<br>
            </th>
          </tr>
          <tr></tr>
          <tr></tr>
          <tr></tr>
          <tr></tr>
          <tr></tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="row">
        <div style="float: left; margin: 15px 30px 15px 0px;">
          <%= attachment_image_tag(@product, :image, :fill, 400, 450, format: 'jpeg', size:"100×100",fallback: "no_image.jpg") %>
        </div>
      <div style="width:400px; height:300px; float:left;">
        <h3 style="color: black;"><%= @product.name %></h3><br>
        <p><%= @product.introduction %></p>
        <p>¥<%= @product.add_tax_tax_out_price.to_s(:dalimited) %>(<%= @product.tax_out_price %>)<span style="font-size:12px;">（税込）</span></p>
      </div>
      <div class="col-xs-5">
         <%= form_with model:@cart_item, url:public_cart_items_path,local: true do |f|  %>
           <%= f.hidden_field :product_id, :value => @product.id %>
           <%= f.number_field :quantity %>
           <%= f.submit "カートに入れる" %>
         <% end %>
        </div>
      </div>
    </div>
  </div>
</div>