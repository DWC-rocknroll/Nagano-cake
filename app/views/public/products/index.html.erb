<div class="container px-5 px-sm-0">
  <div class="row">
    
    <!--「ジャンル検索」を部分テンプレート？-->
    <div class="col-md-3">
      <table class="table table table-bordered">
        <thead>
         <tr>
           <th><div class="text-center font-weight-bold">ジャンル検索</div></th>
         </tr>
        </thead>
        <tbody>
          <tr>
            <th>
              ケーキ<br>
              焼き菓子<br>
              プリン<br>
              キャンディ<br>
            </th>
          </tr>
          <tr></tr>
          <tr></tr>
          <tr></tr>
          <tr></tr>
          <tr></tr>
        </tbody>
      </table>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2><i class="fas fa-cookie-bite"></i>商品一覧<span style="font-size:20px;">（全<%= @quantity %>件）</span></h2><br>
        <div class="row">
          <% @products.each do |product| %>
            <div class="box" style="float:left; margin-right:20px;">
              <%= link_to public_product_path(product.id) do %>
                <%= attachment_image_tag product, :image, size: "170x170",  fallback: "nagano-cake-logo.png" %><br>
              <% end %>
              <p><%= product.name %></p>
              <p>¥<%= product.add_tax_tax_out_price.to_s(:dalimited) %>(<%= product.tax_out_price %>)</p>
            </div>
          <% end %>
        </div>
        <div class="col-xs-6 col-xs-offset-4 ">
          <%= paginate @products %>
        </div>
    </div>
  </div>
</div>