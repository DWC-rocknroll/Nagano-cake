<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-4">
      <h4 class="cart-item-title">ショッピングカート</h4>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-3">
      <%= link_to "カートを空にする", public_cart_item_destroy_path(@cart_item), data: {confirm: 'カートを空にして本当によろしいですか？'}, method: :delete, class:"btn btn-danger rounded" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <table class="table cart-item-table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @total_price = 0 %>
          <% @cart_item.each do |cart_item| %>
            <tr>
              <td><%= attachment_image_tag(cart_item.product, :image, :fill, 80, 100, format: 'jpeg', size:"100×100",fallback: "no_image.jpg") %><%= cart_item.product.name %></td>
              <td>¥<%= cart_item.product.add_tax_tax_out_price %></td>
              <td>
                <%= form_with model:@cart_item_quantity ,  url: public_cart_item_path(cart_item) , method: :patch , local: true do |f| %>
                  <%= f.number_field  :quantity ,value: cart_item.quantity %>
                  <%= f.submit "変更", class: "btn btn-info" %>
                <% end %>
              </td>
              <td>¥<%= (cart_item.product.add_tax_tax_out_price).to_i*(cart_item.quantity).to_i %><% @sub_price = (cart_item.product.add_tax_tax_out_price).to_i*(cart_item.quantity).to_i %></td>
              <td><%= link_to "削除する", public_cart_item_path(cart_item), method: :delete, class:"btn btn-danger rounded" %></td>
            </tr>
            <% @total_price += @sub_price %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3 order-continue-btn">
      <%= link_to"買い物を続ける", public_root_path, class:"btn btn-primary rounded" %>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-3">
      <table class="table total-price-table">
        <thead>
          <tr>
            <th>合計金額</th>
            <th>¥<%= @total_price.to_s(:delimited) %></th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-md-1"></div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3 cart-item-confirm-btn">
      <%= link_to "情報入力に進む", new_public_order_path(@cart_item), class:"btn btn-success rounded" %>
    </div>
  </div>
</div>